---
import BaseLayaout from "../Layouts/BaseLayaout.astro";
import BlogPost from "./components/BlogPost.astro"

const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
const pageTitle = "Mi blog de aprendizaje de Astro";
---
<BaseLayaout pageTitle={pageTitle}>
  <p>Aquí es donde publicaré sobre mi viaje de aprendizaje de Astro.</p>
  <ul>
    {allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
  </ul>
</BaseLayaout>